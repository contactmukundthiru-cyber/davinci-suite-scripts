{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "version", "root_folders", "rules"],
  "properties": {
    "name": {"type": "string"},
    "version": {"type": "string"},
    "root_folders": {"type": "array", "items": {"type": "string"}},
    "similarity_threshold": {"type": "number", "minimum": 0, "maximum": 1},
    "aspect_tolerance": {"type": "number", "minimum": 0, "maximum": 1},
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target"],
        "properties": {
          "source": {"type": "string"},
          "target": {"type": "string"},
          "strategy": {"type": "string", "enum": ["exact", "regex", "token", "similarity"]},
          "expected_resolution": {"type": "string"},
          "expected_aspect": {"type": "number"},
          "similarity_threshold": {"type": "number", "minimum": 0, "maximum": 1},
          "tags": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  }
}
